    '${BUILDPATH}/qsee/src/stor.c',
    '${BUILDPATH}/qsee/src/stor_gpt.c',
    '${BUILDPATH}/qsee/src/stor_rpmbw.c',
    '${BUILDPATH}/qsee/src/qsee_counter_shim.c',
