]

SCORPION_SOURCES = [
    '${BUILDPATH}/qsee/src/kthread_shared.s',
    '${BUILDPATH}/qsee/src/tzapp_syscall.s',
]

A53_64_SOURCES = [
    '${BUILDPATH}/qsee64/src/kthread_shared.s',
    '${BUILDPATH}/qsee64/src/tzapp_syscall.s',
]
#-------------------------------------------------------------------------------
# Add Libraries to image
#-------------------------------------------------------------------------------
# Add sources as binary objects to applib images
# APPLIB32/64 directly include the file tzapp_entry.s to link that object directly to qsapps
# instead of including it in the lib which causes the linker to skip its globals
SCORPION_SOURCES.extend(LIB_SOURCES)
A53_64_SOURCES.extend(LIB_SOURCES)

env.AddBinaryObject('APPLIB32_IMAGE', SCORPION_SOURCES)
env.AddBinaryObject('APPLIB64_IMAGE', A53_64_SOURCES)

#-------------------------------------------------------------------------------
# Load sub scripts
#-------------------------------------------------------------------------------
env.LoadSoftwareUnits()
env.Deploy(['../src/qsee_env.h'])
